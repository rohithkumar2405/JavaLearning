import java.util.Scanner;

public class ForSample {

	public static void main(String a[]) {
		Scanner pn = new Scanner(System.in);
		int num = pn.nextInt();
		int sum =0 ; 
		System.out.println("Enter the number:");
		for(int i = 0 ; i<num ; i++) {
			sum = sum + i;
		}
		System.out.println("Result" + sum);
	}
}
